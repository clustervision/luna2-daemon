[Unit]
Description = Luna 2 Daemon
After = network.target

[Service]
PIDFile = /run/trinity/luna.pid
WorkingDirectory = /trinity/local/luna
ExecStartPre = /bin/mkdir /run/trinity
ExecStart = /usr/local/bin/gunicorn --config /trinity/local/luna/config/gunicorn.py 'luna:api' --pid /run/trinity/luna.pid
ExecReload = /bin/kill -s HUP $MAINPID
ExecStop = /bin/kill -s TERM $MAINPID
ExecStopPost = /bin/rm -rf /run/trinity

[Install]
WantedBy = multi-user.target